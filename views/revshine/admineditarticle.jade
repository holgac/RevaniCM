div.container-fluid
	h2.page-header(ng-if='article._id == undefined')= t('admin.addarticle')
	h2.page-header(ng-if='article._id != undefined')= t('admin.editarticle')
	div.container-fluid
		div.row.form-horizontal
			label.col-sm-1.control-label= t('admin.title')
			div.col-sm-11
				input.form-control(type='text', ng-model='article.title')
		div.row.form-horizontal
			label.col-sm-1.control-label= t('category')
			div.col-sm-10
				input.form-control(type='text', disabled, value="{{article.category | cachedDocument:'category':'name'}}")
			div.col-sm-1
				a.btn.btn-success.btn-xs.pull-right(ng-click='selectCategory()')
					span.glyphicon.glyphicon-pencil
		div(text-angular, ng-model='article.content', style='margin-top:1em')
		button.btn.btn-primary.pull-right(ng-click='save()', style='margin-top:1em')= t('admin.save')
		a.btn.btn-warning.pull-right(href='#viewarticles', style='margin-top:1em; margin-right:1em')= t('goback')

